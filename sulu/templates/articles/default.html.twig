{% extends "base.html.twig" %}

{% block content %}
    <h1 class="text-4xl font-bold mb-4">{{ content.title }}</h1>

    <div {{ stimulus_controller('add_to_cart', { 'code': content.code }) }} class="mb-4">
        <span class="text-lg block mb-2">Price: {{ content.price / 100 }} â‚¬</span>
        <button
                {{ stimulus_action('add_to_cart', 'addToCart', 'click') }}
                {{ stimulus_target('add_to_cart', 'button') }}
                disabled="disabled"
                class="bg-blue-500 text-white hover:bg-blue-700 py-2 px-4 rounded disabled:opacity-50 disabled:cursor-not-allowed"
        >
            <span {{ stimulus_target('add_to_cart', 'buttonText') }}>
                Add to card
            </span>
            <span {{ stimulus_target('add_to_cart', 'spinner') }} class="inset-0 flex items-center justify-center space-x-2 hidden">
                <svg class="animate-spin h-5 w-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </span>
        </button>

        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden" {{ stimulus_target('add_to_cart', 'overlay') }}>
            <div class="bg-white p-4 rounded text-center">
                <p class="mb-4">Item successfully added to cart!</p>
                <button class="bg-blue-500 text-white hover:bg-blue-700 py-2 px-4 rounded" {{ stimulus_action('add_to_cart', 'closeOverlay', 'click') }}>Close</button>
            </div>
        </div>
    </div>

    <p class="prose prose-lg">
        {{ content.description|default()|raw }}
    </p>
{% endblock %}
